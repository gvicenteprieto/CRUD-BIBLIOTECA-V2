<div class="card card-body p-4 bg-success text-white">
  
  <h3>Agregar Libro</h3>

  <form action="/tasks/add" method="post">

    {{! Title Input }}
    <div class="mb-3">
      <label for="title">Titulo:</label>
      <input
        id="title"
        class="form-control rounded-0 bg-dark text-white"
        type="text"
        name="title"
        placeholder="Título del libro"
        autofocus
      />
    </div>

    {{! Author Input }}
    <div class="mb-3">
      <label for="author">Autor:</label>
      <input
        id="author"
        class="form-control rounded-0 bg-dark text-white"
        type="text"
        name="author"
        placeholder="Autor"
        autofocus
      />
    </div>

    {{! Description Input }}
    <div class="mb-3">
      <label for="description">Descripción</label>
      <textarea
        class="form-control rounded-0 bg-dark text-white"
        name="description"
        cols="80"
        placeholder="Descripción"
      ></textarea>
    </div>

    <button class="btn btn-primary" type="submit">Agregar</button>

  </form>

</div>